{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      // attach faz com que o debug se conecte à app já em execução. Se deixar como launch, a app só roda quando eu dou play no debug
      "request": "attach",
      // protocol inspector é necesssário para que ele possa debugar a app node. Tenho que passar uma flag --inspect no script que roda a app
      "protocol": "inspector",
      "restart": true,
      "name": "Debug",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/server.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}
